# Environment Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/bhashagpt_pro"
DATABASE_POOL_SIZE=10

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB=0

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# OpenAI Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# AI Provider Configuration
AI_PROVIDER="gemini"  # Options: openai, gemini, free, mock (Recommended: gemini)
USE_MOCK_OPENAI=false

# Google Gemini (Recommended - Free & High Quality)
GEMINI_API_KEY=""      # Get free from https://makersuite.google.com/app/apikey

# Free AI Providers (Fallback)
HUGGING_FACE_TOKEN=""  # Optional, works without token too

# Google Translate Configuration
GOOGLE_TRANSLATE_API_KEY="your-google-translate-api-key-here"

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key-here"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key-here"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret-here"
STRIPE_PRO_PRICE_ID="price_pro_monthly"
STRIPE_PRO_YEARLY_PRICE_ID="price_pro_yearly"
STRIPE_ENTERPRISE_PRICE_ID="price_enterprise_monthly"

# D-ID Configuration
DID_API_KEY="your-d-id-api-key-here"
DID_BASE_URL="https://api.d-id.com"

# CDN Configuration (for video delivery)
CDN_BASE_URL="https://your-cdn-domain.com"
CDN_ACCESS_KEY="your-cdn-access-key"
CDN_SECRET_KEY="your-cdn-secret-key"

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
COOKIE_SECRET="your-cookie-secret-here"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_FREE_MAX=50
RATE_LIMIT_PRO_MAX=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"