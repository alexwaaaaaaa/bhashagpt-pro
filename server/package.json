{
  "name": "bhashagpt-pro-server",
  "version": "1.0.0",
  "description": "Express.js backend server for BhashaGPT Pro - AI-powered language learning platform",
  "main": "dist/server.js",
  "scripts": {
    "install:all": "npm install && npm run db:generate",
    "dev": "nodemon -r tsconfig-paths/register src/server.ts",
    "build": "tsc -p tsconfig.prod.json && tsc-alias",
    "build:full": "tsc && tsc-alias",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "cron:setup": "tsx src/scripts/cron-setup.ts",
    "cron:daily": "tsx -e \"import('./src/services/cron.service').then(m => m.CronService.runScheduledTasks())\"",
    "cron:weekly": "tsx -e \"import('./src/services/cron.service').then(m => m.CronService.runWeeklyTasks())\"",
    "cron:monthly": "tsx -e \"import('./src/services/cron.service').then(m => m.CronService.runMonthlyTasks())\""
  },
  "keywords": [
    "express",
    "typescript",
    "prisma",
    "postgresql",
    "redis",
    "openai",
    "language-learning",
    "ai",
    "jwt",
    "stripe"
  ],
  "author": "BhashaGPT Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "prisma": "^5.7.1",
    "redis": "^4.6.11",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.33.1",
    "stripe": "^14.9.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mime-types": "^2.1.4",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.4",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
